#!/usr/bin/env nix
#! nix shell nixpkgs#pv nixpkgs#age --command bash

set -e -o pipefail

exclusions=(
  --exclude="$HOME/Downloads"
  --exclude="$HOME/Games"
  --exclude="$HOME/.cache"
  --exclude="$HOME/.local/share/Steam"
  --exclude="$HOME/.local/share/lutris"
  --exclude="$HOME/.local/share/Trash"
  --exclude="$HOME/Backups/phone"
  --exclude="$HOME/Music/phone"
)

filename="backup-$(date +%Y%m%d).tar.zstd.age"

echo "Creating backup at ~/Downloads/$filename..."

tar "${exclusions[@]}" --zstd -cf - "$HOME" 2>/dev/null \
  | pv -s $(du -sb "$HOME" "${exclusions[@]}" | awk '{print $1}') \
  | age -p -o ~/Downloads/"$filename"

echo "Sending to phone..."

/run/current-system/sw/share/gnome-shell/extensions/gsconnect@andyholmes.github.io/service/daemon.js --device=7aa1dceaaaaa7d76 --share-file=~/Downloads/"$filename"
